{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES2022"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    // "strict": true,  // prevents decorator signature errors
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "customConditions": [
      "import"
    ],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    // "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
    //   "importHelpers": true,
    //   "types": ["node"],
    //   "allowSyntheticDefaultImports": true,
    //   "noImplicitAny": false,
    //   "rootDir": ".",
    //   "sourceMap": true
    ,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
